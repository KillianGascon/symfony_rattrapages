{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
    <h1>Animal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numero_identification</th>
                <th>Nom</th>
                <th>Date_de_naissance</th>
                <th>Date_arrivee_zoo</th>
                <th>Date_depart_zoo</th>
                <th>Propriete_zoo</th>
                <th>Genre</th>
                <th>Espece</th>
                <th>Sexe</th>
                <th>Sterilisation</th>
                <th>Quarantaine</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
                <td>{{ animal.id }}</td>
                <td>{{ animal.numeroIdentification }}</td>
                <td>{{ animal.nom }}</td>
                <td>{{ animal.dateDeNaissance ? animal.dateDeNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ animal.dateArriveeZoo ? animal.dateArriveeZoo|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ animal.dateDepartZoo ? animal.dateDepartZoo|date('Y-m-d') : '' }}</td>
                <td>{{ animal.proprieteZoo ? 'Yes' : 'No' }}</td>
                <td>{{ animal.genre }}</td>
                <td>{{ animal.espece }}</td>
                <td>{{ animal.sexe }}</td>
                <td>{{ animal.sterilisation ? 'Yes' : 'No' }}</td>
                <td>{{ animal.quarantaine ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
    <a href="{{ path ('app_enclos_index') }}">enclos</a>
{% endblock %}
